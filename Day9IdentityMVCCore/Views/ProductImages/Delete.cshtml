@model AdminDashBoard.Models.ProductImage

@{
    ViewData["Title"] = "حذف";
}

<h1>حذف</h1>

<h3>هل انت متأكد من حذف هذه الصوره؟</h3>
<div class="col-12">
    <h4>صوره المنتج</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.Product)*@
            المنتج
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Product.Name)
        </dd>
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.Product)*@
            الوصف
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Product.Description)
        </dd>
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.ImagePath)*@
            مسار الصوره
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ImagePath)
        </dd>
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.ImagePath)*@
            الصوره
        </dt>
        @if (Model.ImagePath.Contains("http"))
        {
            <dd class = "col-sm-10">
                <img src="@Model.ImagePath" style="width:200px; height:200px;" class="rounded-circle"/>
            </dd>
        }
        else
        {
            <dd class = "col-sm-10">
                <img src="~/@Model.ImagePath" style="width:200px; height:200px;" class="rounded-circle"/>
            </dd>
        }
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="          حذف          " class="btn btn-danger" /> |
        <a asp-action="Index">العودة للصور</a>
    </form>
</div>
