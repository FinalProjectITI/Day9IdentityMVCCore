@model IEnumerable<Product>

@{
    ViewData["Title"] = "عرض";
}

<h1>المنتجات</h1>

<p>
    <a asp-action="Create" class="btn btn-success">إضافة منتج</a>
</p>
<table class="table">
    <thead class="table-dark">
        <tr>
            <th>
                الاسم
                @*@Html.DisplayNameFor(model => model.Name)*@
            </th>
            <th>
                السعر
                @*@Html.DisplayNameFor(model => model.Price)*@
            </th>
            <th>
                الوصف
                @*@Html.DisplayNameFor(model => model.Description)*@
            </th>
            <th>
                الكميه
                @*@Html.DisplayNameFor(model => model.Quntity)*@
            </th>
            <th>
                الخصم
                @*@Html.DisplayNameFor(model => model.Discount)*@
            </th>
            <th>
                الظهور في الواجهه
                @*@Html.DisplayNameFor(model => model.ShowInHome)*@
            </th>
            <th>
                الفئة
                @*@Html.DisplayNameFor(model => model.Category)*@
            </th>
            <th>
                الموسم
                @*@Html.DisplayNameFor(model => model.Season)*@
            </th>
            <th>
                النوع
                @*@Html.DisplayNameFor(model => model.Type)*@
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quntity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Discount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShowInHome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Season.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-dark">تعديل</a> |
                <a asp-action="Details" asp-route-id="@item.Id"class="btn btn-primary">تفاصيل</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">حذف</a>
            </td>
        </tr>
}
    </tbody>
</table>
